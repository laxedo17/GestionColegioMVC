@model GestionColegioMVC.Models.Estudiante

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles Estudiante</h2>

<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SegundoNombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SegundoNombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaMatriculacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaMatriculacion)
        </dd>

    </dl>

    <!--Taboa para xuntar as columnas e filas e facer que a ID de Estudiante se asocie cos cursos nos que esta ditx estudiante-->
    <table class="table table-condensed table-responsive">
        <tr>
            <th>Nome do Curso</th>
            <th>Creditos</th>
            <th>Nota</th>
        </tr>
        @foreach (var matricula in Model.Matriculas)
        {
    <tr>
        <td>
            <p>
                @matricula.Curso.Titulo
            </p>
        </td>
        <td>
            <p>
                @matricula.Nota
            </p>
        </td>
        <td>
            <p>@matricula.Curso.Creditos</p>
        </td>
    </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.IdEstudiante }) |
    @Html.ActionLink("Volver a Lista", "Index")
</p>
