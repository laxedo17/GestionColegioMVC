@model GestionColegioMVC.Models.IndexViewModel
@{
    ViewBag.Title = "Xestionar conta";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Cambia as opcions da conta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambiar password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Crear password", "SetPassword")
            }
            ]
        </dd>
        <dt>Logins Externos</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Xestionar entrada", "ManageLogins") ]
        </dd>
