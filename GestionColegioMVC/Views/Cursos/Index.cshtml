@model IEnumerable<GestionColegioMVC.Models.Curso>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Novo", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creditos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creditos)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IdCurso }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.IdCurso }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.IdCurso })
        </td>
    </tr>
}

</table>
